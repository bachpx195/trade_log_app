<div class="row">
  <div class="col-lg-12">
    <table class="table table-bordered table-striped table-responsive">
      <thead>
      <tr>
        <th class="text-center"><%= t "log.table.index" %></th>
        <th class="text-center"><%= t "log.table.name" %></th>
        <th class="text-center"><%= t "log.table.address" %></th>
        <th class="text-center"><%= t "log.table.money" %></th>
        <th class="text-center"><%= t "log.table.datetime" %></th>
        <th class="text-center"><%= t "log.table.status" %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <% logs.each_with_index do |f,index| %>
          <tr>
            <td class="text-center"><%= index + 1  %></td>
            <td class="text-center"><%= link_to  f.name, [f] %></td>
            <td class="text-center"><%= f.adress %></td>
            <td class="text-center"><%= f.money %></td>
            <td class="text-center"><%= f.datetime %></td>
            <td class="text-center"><%= t "log.log_status.#{f.status}" %></td>
            <td>
              <%= link_to t("log.edit"), edit_log_path(f) %>
              &nbsp &nbsp &nbsp
              <%= link_to t("log.remove"), f, method: :delete,
                data: {confirm: t("log.destoy_confirm")},
                remote: :true, class: "destroy-recipe"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
